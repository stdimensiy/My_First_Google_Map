<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:background="?attr/colorSecondary"
    tools:ignore="UnusedAttribute">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true"
        app:cardPreventCornerOverlap="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_point"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:contentDescription="123"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/twotone_location_on_white_24dp"
                tools:srcCompat="@android:drawable/ic_dialog_map" />

            <TextView
                android:id="@+id/tv_item_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:text="Дата и время добавления точки"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/iv_point"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="точка добавлена: вчера" />

            <TextView
                android:id="@+id/tv_point_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:text="Наименование отметки"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tv_point_description"
                app:layout_constraintStart_toEndOf="@+id/iv_point"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_header"
                app:layout_goneMarginEnd="16dp"
                tools:text="Наименование книги" />

            <TextView
                android:id="@+id/tv_point_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:maxLines="2"
                android:text="Описание отметки"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_point"
                app:layout_constraintTop_toBottomOf="@+id/tv_point_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>